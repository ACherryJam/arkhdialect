<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <net.nicbell.materiallists.ListItem
        android:id="@id/listItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sizeType="TWO_LINES"
        app:dividerVisible="false">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/MaterialLists.LeadingIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_text_fields_24" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/listItemOptions"
            style="@style/MaterialLists.TrailingIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_more_vert_24" />

    </net.nicbell.materiallists.ListItem>

</FrameLayout>